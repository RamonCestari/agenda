<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CadastroContato">

    <EditText
        android:id="@+id/activity_cadastro_contato_nome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="15dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/activity_cadastro_contato_telefone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="55dp"
        android:ems="10"
        android:hint="Telefone"
        android:inputType="phone"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <EditText
        android:id="@+id/activity_cadastro_contato_endereco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="100dp"
        android:ems="10"
        android:hint="Endereço"
        android:inputType="textPostalAddress"
        android:textAlignment="center"
        android:textAllCaps="false" />

    <TextView
        android:id="@+id/activity_cadastro_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cadastro de Contato"
        android:textAlignment="center"
        android:textAllCaps="true" />

    <EditText
        android:id="@+id/activity_cadastro_contato_aniversario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="145dp"
        android:hint="Aniversário"
        android:textAlignment="center"
        android:inputType="date" />

    <Button
        android:id="@+id/activity_cadastro_button_cadastrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/activity_cadastro_contato_aniversario"
        android:layout_marginLeft="145dp"
        android:text="Cadastrar" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/activity_cadastro_fab_voltar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="25dp"
        android:layout_marginBottom="345dp"
        android:clickable="true"
        app:srcCompat="?attr/actionModeCloseDrawable" />

</RelativeLayout>